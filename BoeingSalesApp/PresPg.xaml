        <DataTemplate x:Key="GridTemplate">
            <StackPanel x:Name="GridItemContainer" Orientation="Horizontal" Width="250" Height="60" 
                        DoubleTapped="Item_DoubleTapped">
                <Border Width="90" 
                        Height="{Binding Height, ElementName=GridItemContainer}"
                        Margin="10,0,0,0" 
                        Background="LightGray">
                    <Image Source="{Binding DisplayIcon}" Width="90" Height="60" />
                </Border>
                <StackPanel Orientation="Vertical" 
                            VerticalAlignment="Center" 
                            Background="LightGray"
                            Height="60"
                            >
                    <TextBlock Text="{Binding DisplayName}"  Margin="5,0,0,0" Width="170" Height="20" TextTrimming="WordEllipsis" Foreground="Black" />
                    <TextBlock Text="{Binding DisplayInfo}" Margin="5,0,0,0" Width="170" Height="20" TextTrimming="WordEllipsis" Foreground="Black"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <Flyout x:Name="noteE" x:Key="enterNote">
            <Flyout.FlyoutPresenterStyle>
                <Style TargetType="FlyoutPresenter">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="MaxWidth" Value="550"/>
                </Style>
            </Flyout.FlyoutPresenterStyle>
            <StackPanel>
                <TextBox PlaceholderText="Notes" x:Name="lines" AcceptsReturn="True" 
                         TextWrapping="Wrap" Width="500"/>
                <Button Content="Add" HorizontalAlignment="Right" Tapped="addLines"/>
            </StackPanel>
        </Flyout>

        <Flyout x:Name="finder" x:Key="artlookup">
            <Flyout.FlyoutPresenterStyle>
                <Style TargetType="FlyoutPresenter">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="MaxWidth" Value="550"/>
                </Style>
            </Flyout.FlyoutPresenterStyle>
            <StackPanel>
                <TextBox PlaceholderText="SearchByTitle" x:Name="magicmaker" 
                         TextWrapping="Wrap" Width="500" TextChanged="onFind"/>
            </StackPanel>
        </Flyout>

    </Page.Resources>

    <Page.BottomAppBar>
        <AppBar Background="{StaticResource BoeingBlue}" HorizontalContentAlignment="Left" Name="botBar">
            <StackPanel Orientation="Horizontal">
                <AppBarButton Name="backbut" Icon="Back" Visibility="Collapsed"
                              Tapped="onBack" Label="Back">
                </AppBarButton>
                <AppBarButton Name="Noter" Label="Note" Icon="Pin"
                              Tapped="addNote" FlyoutBase.AttachedFlyout="{StaticResource enterNote}">
                </AppBarButton>
                
                <AppBarButton Label="Find" Icon="Find" Tapped="onFindTap"
                              FlyoutBase.AttachedFlyout="{StaticResource artlookup}"/>
                <AppBarSeparator Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <AppBarButton Label="End Meeting" Icon="Stop" Tapped="doneMeet"/>
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid x:Name="ArtPanel" Grid.Row="1" Margin="12,0,12,0">
            <GridView x:Name="ArtView" ItemsSource="{Binding}"
                Foreground="White" FontSize="65" ItemTemplate="{StaticResource GridTemplate}"
                SelectionMode="Single" Margin="0,10,0,0"/>
        </Grid>

    </Grid>
</Page>
