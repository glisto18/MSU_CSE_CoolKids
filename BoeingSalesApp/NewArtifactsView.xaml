<Page
    x:Name="pageRoot"
    x:Class="BoeingSalesApp.NewArtifactsView"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BoeingSalesApp"
    xmlns:common="using:BoeingSalesApp.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <AppBar Background="{StaticResource BoeingBlue}" HorizontalContentAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <AppBarButton Name="newCat" Label="New Category" 
                              Icon="Add"
                              Tapped="newCat_Tapped">
                    <Popup Name="myPopup"
                           >
                        <TextBlock Text="Name:"/>
                    </Popup>
                    <!--<Popup Name="myPopup" IsOpen="{Binding ElementName=newCat, Path=Is, Mode=OneWay}">
                        <TextBlock Text="Name:"/>
                        </Popup>-->
                </AppBarButton>
                
                <AppBarButton Label="Find" Icon="Find" />
                <AppBarButton Label="Delete" Icon="Delete" Tapped="deleteArt" VerticalAlignment="Top" />
                <AppBarButton Label="Change Title" Icon="Edit" Tapped="titleChange"/>
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>

    <Page.Resources>
        <x:String x:Key="PageName">New Artifacts View</x:String>

        <DataTemplate x:Key="GridTemplate">
            <StackPanel x:Name="GridItemContainer" Orientation="Horizontal" Width="250" Height="125" DoubleTapped="Item_DoubleTapped">
                <Border Width="90" 
                        Height="{Binding Height, ElementName=GridItemContainer}"
                        Margin="10,0,0,0" 
                        Background="White">
                    <Image Source="Assets/Artifacts.png" Width="90" Height="120" />
                </Border>
                <StackPanel Orientation="Vertical" 
                            VerticalAlignment="Center" 
                            Background="LightGray"
                            Height="{Binding Height, ElementName=GridItemContainer}">
                    <TextBlock Text="{Binding DisplayName}"  Margin="5,0,0,0" Width="170" Height="20" TextTrimming="WordEllipsis" Foreground="Black" />
                    <TextBlock Text="{Binding DisplayInfo}" Margin="5,0,0,0" Width="170" Height="20" TextTrimming="WordEllipsis" Foreground="Black"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid x:Name="parentGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Margin="39,59,39,0" 
                    Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                    Style="{StaticResource NavigationBackButtonNormalStyle}"
                    VerticalAlignment="Top"
                    AutomationProperties.Name="Back"
                    AutomationProperties.AutomationId="BackButton"
                    AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock x:Name="pageTitle" 
                       Text="{StaticResource PageName}" 
                       Style="{StaticResource HeaderTextBlockStyle}" 
                       Grid.Column="1" 
                       IsHitTestVisible="false" 
                       TextWrapping="NoWrap" 
                       VerticalAlignment="Center" 
                       Margin="0,0,30,0"/>
            <TextBlock Grid.Column="2" Name="lblCurrentCategory" Text="All" FontSize="48" FontStyle="Italic" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Segoe UI"/>
            <TextBlock Grid.Column="2" Text="All" FontSize="48" FontStyle="Italic" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Segoe UI"/>
            <!--Button Grid.Column="2" HorizontalAlignment="Left" Height="82" 
                    Margin="640,25,0,0" VerticalAlignment="Top" Width="97" BorderBrush="Transparent" Click="Button_Click">
                <StackPanel>
                    <Image Source="Assets/SalesBag.Scale-100.png"/>
                </StackPanel>
            </-->
            <ComboBox x:Name="SalesBagComboBox" Grid.Column="2" HorizontalAlignment="Left" Height="295" Margin="613,107,0,-262" 
                      VerticalAlignment="Top" Width="152" Visibility="Collapsed"/>
        </Grid>

        <GridView Grid.Row="1" x:Name="ArtifactsGridView"
            ItemTemplate="{StaticResource GridTemplate}"
            VerticalAlignment="Top"
            SelectionMode="Multiple" 
            CanDragItems="True" >

            <!--<Button/>
            <Button/>
            <Button/>
            <Button/>
            <Button/>-->
        </GridView>

    </Grid>
</Page>
