<Page
    x:Name="pageRoot"
    x:Class="BoeingSalesApp.NewArtifactsView"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BoeingSalesApp"
    xmlns:common="using:BoeingSalesApp.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Flyout x:Name="titBox" x:Key="enterTit">
            <Flyout.FlyoutPresenterStyle>
                <Style TargetType="FlyoutPresenter">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="MaxWidth" Value="550"/>
                </Style>
            </Flyout.FlyoutPresenterStyle>
            <StackPanel>
                <TextBox PlaceholderText="Artifact Title:" x:Name="newtitle" Width="500"/>
                <Button Content="Add" HorizontalAlignment="Right" Tapped="titleChange"/>
            </StackPanel>
        </Flyout>

        <x:String x:Key="PageName">Artifacts</x:String>

            <DataTemplate x:Key="GridTemplate">
                <StackPanel x:Name="GridItemContainer" Orientation="Horizontal" Width="250" Height="60" 
                        DoubleTapped="Item_DoubleTapped"
                        Drop="Item_OnDrop" AllowDrop="True"
                        Tapped="Item_OnTapped">
                    <Border Width="90" 
                        Height="{Binding Height, ElementName=GridItemContainer}"
                        Margin="10,0,0,0" 
                        Background="#e4f1fe">
                        <Image Source="{Binding DisplayIcon}" Width="90" Height="60" />
                    </Border>
                    <StackPanel Orientation="Vertical" 
                            VerticalAlignment="Center" 
                            Background="#e4f1fe"
                            Height="60"
                            >
                        <TextBlock Text="{Binding DisplayName}"  Margin="5,0,0,0" Width="170" Height="20" TextTrimming="WordEllipsis" Foreground="Black" />
                        <TextBlock Text="{Binding DisplayInfo}" Margin="5,0,0,0" Width="170" Height="20" TextTrimming="WordEllipsis" Foreground="Black"/>
                    </StackPanel>
                </StackPanel>
            </DataTemplate>

        <Flyout x:Name="finder" x:Key="artlookup">
            <Flyout.FlyoutPresenterStyle>
                <Style TargetType="FlyoutPresenter">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="MaxWidth" Value="550"/>
                </Style>
            </Flyout.FlyoutPresenterStyle>
            <StackPanel>
                <TextBox PlaceholderText="SearchByTitle" x:Name="magicmaker" 
                         TextWrapping="Wrap" Width="500" TextChanged="onFind"/>
            </StackPanel>
        </Flyout>
    </Page.Resources>

        <Page.BottomAppBar>
        <AppBar Background="{StaticResource BoeingBlue}" HorizontalContentAlignment="Left" 
                Name="uxAppBar">
            <StackPanel Orientation="Horizontal">
                <AppBarButton Name="newCat" Label="New Category" 
                              Icon="Add"
                              Tapped="newCat_Tapped">
                    <Popup Name="myPopup"
                           >
                        <TextBlock Text="Name:"/>
                    </Popup>
                </AppBarButton>

                <AppBarButton Label="Find" Icon="Find" Tapped="launchme" 
                              FlyoutBase.AttachedFlyout="{StaticResource artlookup}"/>
                <AppBarButton Label="Delete" Icon="Delete" VerticalAlignment="Top" Tapped="delete_OnTapped" />
                <AppBarButton Label="Change Title" Icon="Edit" Tapped="launchme" 
                             Name="titler" FlyoutBase.AttachedFlyout="{StaticResource enterTit}"/>
                <AppBarButton Label="Remove From Category" Tapped="UxRemoveFromCategory_OnTapped"
                              Icon="Remove" Visibility="Collapsed" Name="uxRemoveFromCategory" />
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid x:Name="parentGrid" Background="White">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid Grid.Row="0" Background="#003889">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" x:Name="backButton" Margin="39,59,39,0" 
                    Tapped="onBack"
                    Style="{StaticResource NavigationBackButtonNormalStyle}"
                    VerticalAlignment="Top"
                    AutomationProperties.Name="Back"
                    AutomationProperties.AutomationId="BackButton"
                    AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock x:Name="pageTitle" 
                       Grid.Column="1"
                       Text="{StaticResource PageName}" 
                       Style="{StaticResource HeaderTextBlockStyle}" 
                       IsHitTestVisible="false" 
                       TextWrapping="NoWrap" 
                       VerticalAlignment="Center" 
                       Margin="0,0,30,0"/>
            <TextBlock Grid.Column="2" Name="lblCurrentCategory" Text="All" FontSize="48" FontStyle="Italic" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Segoe UI"/>

            <Button Grid.Column="3" x:Name="addtoexist" HorizontalAlignment="Left" Height="82" 
                     VerticalAlignment="Center" Width="97" BorderBrush="Transparent" Click="AddToExistingSalesbag_Click">
                <StackPanel>
                    <Image Source="Assets/SalesBag.Scale-100.png"/>
                </StackPanel>
                </Button>
                
                <Button x:Name="NewBagButton" Grid.Column="3" HorizontalAlignment="Right" Height="82" 
                     VerticalAlignment="Center" Width="97" BorderBrush="Transparent">
                <StackPanel>
                    <Image Source="Assets/SalesBag.Scale-100.png"/>
                    </StackPanel>
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel Height="71" Width="152">
                                <TextBox x:Name="newBagName" SelectedText="Name?"/>
                                <Button Click="AddToNewSalesBag_Click" Content="Create" Height="36" Width="90"/>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
                    
                <Button x:Name="EditButton" Grid.Column="3" HorizontalAlignment="Center" Height="82" 
                     VerticalAlignment="Center" Width="97" BorderBrush="Transparent" Click="EditButton_Click">
                    <StackPanel>
                        <Image Source="Assets/SalesBag.Scale-100.png"/>
                    </StackPanel>
                </Button>
                    
                <Button x:Name="RemoveButton" Grid.Column="4" HorizontalAlignment="Left" Height="82" 
                     VerticalAlignment="Center" Width="97" BorderBrush="Transparent" Click="RemoveButton_Click">
                    <StackPanel>
                        <Image Source="Assets/SalesBag.Scale-100.png"/>
                </StackPanel>
            </Button>

                <TextBlock Grid.Column="3" VerticalAlignment="Bottom" Text="Add to Existing" FontStyle="Italic" HorizontalAlignment="Left"  FontFamily="Segoe UI"/>

                <TextBlock Grid.Column="3" VerticalAlignment="Bottom" Text="Add to New" FontStyle="Italic" HorizontalAlignment="Right"  FontFamily="Segoe UI" Margin="0,0,16,0"/>

                <TextBlock Grid.Column="3" VerticalAlignment="Bottom" Text="Edit Existing" FontStyle="Italic" HorizontalAlignment="Center" FontFamily="Segoe UI"/>

                <TextBlock Grid.Column="4" VerticalAlignment="Bottom" Text="Remove" FontStyle="Italic" HorizontalAlignment="Left" FontFamily="Segoe UI" Margin="24,0,0,0"/>
                
            <!--            <ComboBox Grid.Column="4" Name="UxCategoryBox" PlaceholderText="Select Category"
                      
            <ComboBox x:Name="SalesBagComboBox" 
                      Grid.Column="4" 
                      HorizontalAlignment="Left" 
                      Height="295" 
                      VerticalAlignment="Top" 
                      Width="152" 
                      Visibility="Collapsed" 
                      Margin="0,140,0,-295">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Path=Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox> -->
            <!--<TextBlock Grid.Column="2" Text="All" FontSize="48" FontStyle="Italic" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Segoe UI"/>-->
        </Grid>

        <GridView Grid.Row="1" x:Name="ArtifactsGridView"
            ItemTemplate="{StaticResource GridTemplate}"
            SelectionChanged="ArtifactsGridView_OnSelectionChanged"
            VerticalAlignment="Top"
            SelectionMode="Multiple" 
            CanDragItems="True" >
        </GridView>
    </Grid>
</Page>
